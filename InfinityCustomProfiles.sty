    % ISC name
    \node[white, anchor=west, scale=0.83, xscale=1.006, shift={(2.16, 3.73)}] at (REF){ISC: #1};
    % Troop type
    \node[textlayer, white, anchor=east, scale=0.83, xscale=1.012, shift={(116.54, 3.8)}] at (REF){#3};

